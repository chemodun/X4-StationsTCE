<?xml version="1.0" encoding="utf-8"?>
<mdscript name="Stations_Trade_Config_Exchanger_Interface" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="md.xsd">
  <cues>

    <cue name="Main">
      <conditions>
        <event_cue_signalled cue="md.Setup.Start" />
      </conditions>
      <actions>
        <set_value name="$DebugChance" exact="0" />
      </actions>
      <cues>

        <cue name="Add_Menu_Item" instantiate="true">
          <conditions>
            <event_cue_signalled cue="md.Interact_Menu_API.Get_Actions" />
          </conditions>
          <actions>
            <set_value name="$station" exact="event.param.$object" />
            <debug_text
              text="'TradeConfigExchanger: Add_Menu_Item\n Station: %s.\n event.param: %s.'.[@$station.debugname, @event.param]" chance="100" filter="scripts" />
            <!-- event.param.$showPlayerInteractions and  -->
            <do_if
              value="$station.owner == faction.player and $station.isclass.{class.station} and $station.storagemodules.count gt 0"> <!--  and not
              (@$station.products.count gt 0) -->
              <debug_text
                text="'TradeConfigExchanger: Add_Menu_Item\n station: %s\n build: %s\n isshipyard: %s\n iswharf: %s\n isequipmentdock:%s\n issupplyship:%s\n istradestation: %s\n storagemodules: %s\n products: %s, %s\n tradewares: %s, %s'.
                  [@$station.debugname, @$station.build, @$station.isshipyard, @$station.iswharf, @$station.isequipmentdock, @$station.issupplyship, @$station.istradestation, @$station.storagemodules.count, @$station.products.count, @$station.products.list, @$station.tradewares.count, @$station.tradewares.list]"
                chance="100" filter="scripts" />
              <signal_cue_instantly
                cue="md.Interact_Menu_API.Add_Action"
                param="table[
                  $id         = 'trade_config_exchanger_load',
                  $section    = 'main',
                  $text       = {1972092405, 1},
                  $mouseover  = {1972092405, 2},
                  $active     = true,
                  $callback   = Show_Interface,
                ]" />
            </do_if>
          </actions>
        </cue>

        <cue name="Show_Interface" instantiate="true">
          <conditions>
            <event_cue_signalled />
          </conditions>
          <actions>
            <set_value name="$station" exact="event.param.$object" />
            <debug_text
              text="'TradeConfigExchanger: Show\n Station: %s.\n event.param: %s.'.[@$station.debugname, @event.param]" chance="100" filter="scripts" />

            <do_if
              value="$station.owner == faction.player and $station.isclass.{class.station} and $station.storagemodules.count gt 0"> <!-- and not
              (@$station.products.count gt 0) -->
              <raise_lua_event name="'TradeConfigExchanger.Request'" />
            </do_if>
          </actions>

        </cue>

      </cues>
    </cue>
  </cues>
</mdscript>